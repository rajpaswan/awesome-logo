<UserControl x:Class="AwesomeLogoPhone.SaveControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="Auto">

    <Grid x:Name="LayoutRoot" LostFocus="LayoutRoot_LostFocus">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Background="#FF1F1F1F">
            <TextBox x:Name="savename_box" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="consolas" FontSize="20" Width="341" BorderThickness="2" Text="untitled"/>
            <Button x:Name="save_button" HorizontalAlignment="Right" VerticalAlignment="Center" Click="save_button_Click" FontSize="20" FontFamily="Segoe UI Symbol" BorderThickness="2" Content="&#xE0E7;" BorderBrush="{x:Null}"/>
            <Button x:Name="cancel_button" HorizontalAlignment="Right" VerticalAlignment="Center" Click="cancel_button_Click" FontSize="20" FontFamily="Segoe UI Symbol" BorderThickness="2" Content="&#xE10A;" BorderBrush="{x:Null}"/>
        </StackPanel>

    </Grid>
</UserControl>